{
  "compilerOptions": {
    "outDir": "build",
    "rootDir": "src",
    "module": "CommonJS",
    "target": "ES6",
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]  
}
